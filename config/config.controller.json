{
  "_schema_version": "1.0.1",
  "_description": "PathSteer Guardian - Controller (PoP) Configuration",
  "_note": "Controllers are simpler than Edge - no netns, just WireGuard peers + dedupe",
  
  "node": {
    "role": "controller",
    "id": "ctrl-a",
    "description": "Controller A - PoP Dallas"
  },
  
  "network": {
    "wan_interface": "ens192",
    "lan_interface": "ens224",
    "internal_ip": "10.201.136.13",
    "c8000_gateway": "95.173.216.161"
  },
  
  "wireguard": {
    "interface": "wg0",
    "listen_port": 51820,
    "mtu": 1380,
    "address": "10.200.0.1/24"
  },
  
  "edge_peers": {
    "edge-demo-1": {
      "pubkey": "REPLACE_WITH_EDGE_PUBKEY",
      "allowed_ips": ["10.200.1.0/24", "10.200.2.0/24", "10.200.3.0/24", "10.200.4.0/24", "104.204.136.48/28"],
      "_note": "Each /24 is one uplink tunnel from edge"
    }
  },
  
  "dedupe": {
    "enabled": true,
    "flow_ttl_ms": 5000,
    "jitter_window_ms": 100
  },
  
  "forwarding": {
    "enabled": true,
    "to_c8000": true,
    "proxy_arp": true
  },
  
  "proxy": {
    "https_enabled": false,
    "https_port": 8443,
    "_note": "Enable for LLM/AI session anchoring"
  },
  
  "web_ui": {
    "enabled": true,
    "bind": "0.0.0.0",
    "port": 8080
  }
}
